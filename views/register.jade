extends layout

block content
    .container
        h1 Registrierung
        p.lead Bitte Registrieren sie sich mit Ihrem Benutzernamen und Passwort
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Benutzername')
            .form-group
                input.form-control(type='password', name="password", placeholder='Passwort')
            button.btn.btn-default(type='submit') Absenden
        &nbsp;
    a(href='/')
        button.btn.btn-primary(type="button") Abbrechen
